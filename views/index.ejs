<div class="container login-container">
  <h1 class="system-title login-system-title"><%= i18n('library') %></h1>
  <div class="well">
    <% if (loginInvalid) {%>
    <div class="alert alert-warning">
      <%= i18n('login.data.invalid') %>
    </div>
    <% } %>
    <form role="form" name="loginForm" action="/user/login" method="post">
      <div class="form-group">
        <label for="login"><%= i18n('login.label') %></label>
        <input type="text" class="form-control" id="login" name="login" ng-model="login" ng-required="true">
      </div>
      <div class="form-group">
        <label for="password"><%= i18n('login.password.label') %></label>
        <input type="password" class="form-control" id="password" name="password" ng-model="password" ng-required="true">
      </div>
      <button type="submit" class="btn btn-primary btn-block" ng-disabled="loginForm.$invalid"><%= i18n('login.enter.label') %></button>
    </form>
  </div>
</div>